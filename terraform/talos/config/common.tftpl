cluster:
  extraManifests:
  - https://github.com/kubernetes-sigs/gateway-api/releases/download/v1.4.0/standard-install.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/argocd/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/cert-manager/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/cilium/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/external-secrets/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/snapshot-controller/manifests.yaml
  network:
    cni:
      name: none
  proxy:
    disabled: true
machine:
  install:
    disk: /dev/sda
    image: ${installer_url}
  network:
    hostname: ${hostname}
    nameservers:
    - 1.1.1.1
    - 8.8.8.8
  nodeLabels:
    topology.kubernetes.io/region: ${cluster_name}
    topology.kubernetes.io/zone: ${node_name}
