cluster:
  network:
    cni:
      name: none
  proxy:
    disabled: true
  extraManifests:
  - https://github.com/kubernetes-sigs/gateway-api/releases/download/v1.4.0/standard-install.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/argocd/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/cilium/manifests.yaml
  - https://raw.githubusercontent.com/cecobask/homelab/refs/heads/main/kubernetes/platform/sealed-secrets/manifests.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/groupsnapshot.storage.k8s.io_volumegroupsnapshotclasses.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/groupsnapshot.storage.k8s.io_volumegroupsnapshotcontents.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/groupsnapshot.storage.k8s.io_volumegroupsnapshots.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/snapshot.storage.k8s.io_volumesnapshotclasses.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/snapshot.storage.k8s.io_volumesnapshotcontents.yaml
  - https://raw.githubusercontent.com/kubernetes-csi/external-snapshotter/refs/tags/v8.4.0/client/config/crd/snapshot.storage.k8s.io_volumesnapshots.yaml
machine:
  install:
    disk: /dev/sda
    image: ${installer_url}
  network:
    hostname: ${hostname}
    nameservers:
    - 1.1.1.1
    - 8.8.8.8
  nodeLabels:
    topology.kubernetes.io/region: ${cluster_name}
    topology.kubernetes.io/zone: ${node_name}
